@require 'modals'

// Forms styles
.form
  width: 100%;

  //  Social form
  &__social-signin
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-content: center;
    padding-right: 60px;
    & > .social-button
      margin-bottom: 20px;
      &:last-child
        margin-bottom: 0;

    @media (max-width: large_modal_width)
      padding-right: 0;
      padding-top: 24px;

  //  Sign in form with inputs
  &__form-signin
    padding-left: 60px;
    border-left: 1px solid rgba(0, 0, 0, 0.15);
    @media (max-width: large_modal_width)
      padding-left: 0;
      padding-bottom: 24px;
      border: none;
      border-bottom: 1px solid rgba(0, 0, 0, 0.15);

    // Wrapper in input component
    &-field
      &-error-text
        font-size: 12px;
        color: #bf0c00;

      // Wrapper for input type: text, password, checkbox
      &-text, &-password, &-checkbox
        display: flex;
        flex-direction: column-reverse;
        margin-bottom: 22px;

      //  When type is checkbox -> then direction is row
      &-checkbox
        flex-direction: row;
        margin-top: -1px;
        margin-left: -4px;
        margin-bottom: 16px;


    //  Input field in input component
    &-input
      // Text and password type input
      &-text, &-password
        width: 100%;
        height: 40px;
        padding: 5px 10px;
        border-radius: 3px;
        border: 1px solid #dddddd;

        // Label in input component
        & + label, ../-checkbox + label
          margin-bottom: 7px;
          font-size: 14px;
          font-weight: 700;
          color: #333333;

        // When input is invalid
        &-invalid
          border: 1px solid #bf0c00;
          & + label
            color: #bf0c00;

    // Form submit button
    &-submit
      height: 40px;
      padding: 12px 31px;
      font-size: 14px;
      font-weight: 700;
      background-color: #252525;
      color: #ffffff;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      &:hover
        background-color: #666666;

    // Help logging in
    &-help
      float: right;
      padding-top: 10px;
      font-size: 14px;
      font-weight: 700;
      line-height: 18px;
      color: #252525;
      text-decoration: underline;
      &:hover
        color: #666666;
